{
	"name": "sjdw-theme",
	"description": "A custom library framework for WordPress Plugin and Theme development.",
	"license": "MIT",
	"devDependencies": {
		"@wordpress/eslint-plugin": "^22.0.0",
		"@wordpress/stylelint-config": "^23.20.0",
		"bootstrap": "^5.3.7",
		"gulp": "^5.0.1",
		"gulp-cli": "^3.1.0",
		"gulp-dart-sass": "^1.1.0",
		"gulp-rename": "^2.1.0",
		"gulp-uglify": "^3.0.2",
		"merge-stream": "^2.0.0",
		"npm-run-all": "^4.1.5",
		"ordered-read-streams": "^2.0.0"
	},
	"scripts": {
		"build": "gulp",
		"check": "npm-run-all -p check:scss check:css check:js",
		"check:scss": "stylelint 'assets/scss/**/*.scss' --allow-empty-input",
		"check:css": "stylelint 'assets/css/**/*.css' --allow-empty-input",
		"check:js": "eslint 'assets/js/*.js' --no-error-on-unmatched-pattern",
		"fix": "npm-run-all -p fix:scss fix:css fix:js",
		"fix:css": "stylelint 'assets/css/**/*.css' --fix --allow-empty-input",
		"fix:scss": "stylelint 'assets/scss/**/*.scss' --fix --allow-empty-input",
		"fix:js": "eslint 'assets/js/*.js' --fix --no-error-on-unmatched-pattern"
	}
}
